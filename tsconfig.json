{
    "include": ["**/*.ts"],
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": false,
        "target": "es2016",
        "module": "esnext",
        "lib": ["DOM", "es5", "es2015.promise", "es2016"],
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "rootDir": ".",
    },
}