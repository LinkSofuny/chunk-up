{
    "include": ["**/*.ts"],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["DOM", "es5", "es2015.promise", "es2016"],
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "rootDirs": ["src"]
    },
}